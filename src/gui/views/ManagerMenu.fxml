<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ManagerMenuController">
  <MenuBar prefHeight="29.0" prefWidth="1100.0">
    <menus>
      <Menu mnemonicParsing="false" text="Schedule">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#handleHome" text="See schedule" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Reservation">
        <items>
          <MenuItem fx:id="reservationButton" mnemonicParsing="false" onAction="#handleReservation" text="create meeting" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Auto schedule">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#switchToCreateAutoSchedule" text="Create" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Validation">
        <items>
          <MenuItem fx:id="AccountValidation" mnemonicParsing="false" onAction="#switchToAccountValidation" text="Validate Account" />
        </items>
        <items>
          <MenuItem fx:id="MeetingValidation" mnemonicParsing="false" onAction="#switchToMeetingValidation" text="Validate Meetings" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="Groups">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#switchToManageGroups" text="Manage Groups" />
        </items>
      </Menu>
      <Menu mnemonicParsing="false" text="My account">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#switchToSeeAccount" text="See" />
        </items>
      </Menu>
         <Menu mnemonicParsing="false" text="Notifications">
            <items>
               <MenuItem fx:id="Notification" mnemonicParsing="false" onAction="#switchToInvitation" text="See notifications" />
            </items>
         </Menu>
      <Menu mnemonicParsing="false" text="Logout">
        <items>
          <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
        </items>
      </Menu>
    </menus>
  </MenuBar>
</AnchorPane>
